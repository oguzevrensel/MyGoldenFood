@model IEnumerable<MyGoldenFood.Models.Product>

@{
    ViewData["Title"] = "Ürünlerimiz";
}

<div class="container my-5">
    <h2 class="text-center mb-4 text-white">Ürünlerimiz</h2>
    <div class="product-grid">
        @foreach (var product in Model)
        {
            <div class="product-card" onclick="showModal('@product.Name', '@product.Description')">
                <div class="image-container">
                    <img src="@product.ImagePath" alt="@product.Name" class="product-image">
                </div>
                <div class="product-name-container">
                    <h5 class="product-name">@product.Name</h5>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: rgba(0, 0, 0, 0.8); color: white; border: none;">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel" style="color: #fff;"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div style="border-bottom: 1px solid white; margin: 10px 0;"></div>
            <div class="modal-body">
                <h6 style="padding-bottom: 5px;">Ürün Detayı:</h6>
                <p id="detailsModalDescription" style="margin-top: 10px; line-height: 1.6;"></p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Grid Layout */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    /* Card Style */
    .product-card {
        border: none; /* Beyaz çevreyi kaldır */
        border-radius: 10px;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.3s ease;
        text-align: center;
        background-color: transparent; /* Arka planı şeffaf yap */
    }

        .product-card:hover {
            transform: scale(1.05);
        }

    /* Resim Düzeni */
    .image-container {
        width: 100%;
        height: 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000;
    }

    .product-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain; /* Resim tam görünür */
    }

    /* Ürün Adı */
    .product-name-container {
        background-color: #000; /* Siyah arka plan */
        padding: 10px 0;
    }

    .product-name {
        margin: 0;
        font-size: 1.25rem;
        font-weight: bold;
        color: #fff; /* Yazı rengi beyaz */
    }

    /* Modal Style */
    .modal-content {
        background: rgba(0, 0, 0, 0.8) !important;
        color: white !important;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .modal-body h6 {
        border-bottom: 1px solid white;
        padding-bottom: 5px;
    }

    .btn-close-white {
        background-color: white;
        border-radius: 50%;
    }
</style>

<script>
    function showModal(name, description) {
        document.getElementById('detailsModalLabel').textContent = name;
        document.getElementById('detailsModalDescription').textContent = description;
        var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
        modal.show();
    }
</script>
