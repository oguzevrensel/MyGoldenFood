@model IEnumerable<MyGoldenFood.Models.Product>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="~/uploads/@System.IO.Path.GetFileName(product.ImagePath)"
                             alt="Ürün Resmi"
                             style="width: 80px; height: auto;" />
                    }
                    else
                    {
                        <span>Resim Yok</span>
                    }
                </td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="loadEditForm(@product.Id)">Düzenle</button>
                    <button class="btn btn-danger btn-sm" onclick="deleteProduct(@product.Id)">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>
